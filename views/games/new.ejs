<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/games/new.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <% if (user) { %>
    <form
    class="new-game-form"
    action="/games"
    method="POST"
    autocomplete="off"
    >
    <label for="name">Name:</label>
    <input id="name" required type="text" name="name" placeholder="Enter Name">
    <label for="image">Image:</label>
    <input id="image" type="text" name="image" placeholder="Enter Image Url">
    <label for="description">Description:</label>
    <textarea id="description" name="description" placeholder="Enter Description" cols="50" rows="5"></textarea>
    <button type="submit">Add Game</button>
  </form>
  <% } else { %>
    <h2>Please log in to access this page</h2>
  <% } %>
</main>

<%- include('../partials/footer') %>