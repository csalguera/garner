<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/games/index.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <section>
    <% games.forEach(game => { %>
      <div class="game-container">
        <a href="/games/<%= game._id %>">
          <img src="<%= game.image %>">
          <p><%= game.name %></p>
        </a>
      </div>
    <% }) %>
  </section>
</main>
    
<%- include('../partials/footer') %>